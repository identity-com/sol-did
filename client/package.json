{
  "version": "0.0.6",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "solid"
  ],
  "bin": {
    "solid": "solid"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "build-program": "cd ../program && cargo build-bpf",
    "start-validator": "solana-test-validator --bpf-program ide3Y2TubNMLLhiG1kDL6to4a8SjxD18YWCYC5BZqNV ../program/target/deploy/solid_did.so --reset --quiet",
    "test": "tsdx test --testPathIgnorePatterns=e2e",
    "test-e2e": "start-server-and-test start-validator http://localhost:8899/health test-e2e-pattern",
    "test-e2e-pattern": "tsdx test --forceExit --testPathPattern=e2e",
    "lint": "tsdx lint --maxWarnings 0",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@identity.com/solid-did-client",
  "author": "dankelleher",
  "module": "dist/solid-did-client.esm.js",
  "size-limit": [
    {
      "path": "dist/solid-did-client.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/solid-did-client.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/bn.js": "^5.1.0",
    "@types/bs58": "^4.0.1",
    "husky": "^5.0.9",
    "size-limit": "^4.9.2",
    "start-server-and-test": "^1.12.0",
    "ts-jest": "^26.5.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@solana/web3.js": "^0.93.0",
    "bn.js": "^4.12.0",
    "borsh": "^0.3.1",
    "bs58": "^4.0.1",
    "did-resolver": "^3.0.1"
  }
}
